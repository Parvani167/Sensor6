<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape (square) -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#85d68a" /> <!-- Set your desired background color -->
            <corners android:radius="0dp" /> <!-- Set corner radius to 0dp to make it square -->
        </shape>
    </item>


    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="5dp" android:color="@color/black" />
        </shape>
    </item>

</layer-list>
