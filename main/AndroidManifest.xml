<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.sensor.gyroscope" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Accelero"
        tools:targetApi="31">
        <activity
            android:name=".Gravity"
            android:exported="false" />
        <activity
            android:name=".Resources"
            android:exported="false" />
        <activity
            android:name=".WelcomePage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Accelero">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pressurescreen"
            android:exported="false"
            android:label="@string/title_activity_pressurescreen"
            android:theme="@style/Theme.Accelero" />
        <activity
            android:name=".Geomagneticscreen"
            android:exported="false"
            android:label="@string/title_activity_geomagneticscreen"
            android:theme="@style/Theme.Accelero" />
        <activity
            android:name=".Light"
            android:exported="false"
            android:label="@string/title_activity_light"
            android:theme="@style/Theme.Accelero" />
        <activity
            android:name=".Gyroscopescreen"
            android:exported="false"
            android:label="@string/title_activity_gyroscopescreen"
            android:theme="@style/Theme.Accelero" />
        <activity
            android:name=".Accelerometerscreen"
            android:exported="false"
            android:label="@string/title_activity_accelerometerscreen"
            android:theme="@style/Theme.Accelero" />
        <activity
            android:name=".homepage"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Accelero" />
    </application>

</manifest>